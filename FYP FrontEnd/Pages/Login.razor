@page "/login"


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login | BIIT Sports Tech</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            background: #d3d3d3;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
        }

        .screen {
            width: 380px;
            height: 760px;
            border-radius: 40px;
        }

        .logo {
            width: 140px;
            height: 140px;
            margin: 20px auto 50px;
            display: block;
            border-radius: 50%;
        }

        .input-group {
            margin-bottom: 20px;
        }

        .input-field {
            width: 80%;
            padding: 18px 20px;
            font-size: 16px;
            border: none;
            border-radius: 30px;
            background: #e8e8e8;
            color: #666;
            box-sizing: border-box;
            outline: none;
        }

            .input-field::placeholder {
                color: #999;
            }

            .input-field:focus {
                background: #ddd;
            }

        .login-btn {
            width: 80%;
            background: #E31212;
            color: white;
            padding: 18px;
            font-size: 18px;
            border-radius: 30px;
            border: none;
            font-weight: bold;
            cursor: pointer;
            letter-spacing: 3px;
            margin-top: 20px;
            box-sizing: border-box;
        }

            .login-btn:hover {
                background: #E31220;
                transition: 0.3s;
            }

        .error-message {
            color: #E31212;
            font-size: 14px;
            margin-top: 15px;
            display: none;
        }

            .error-message.show {
                display: block;
            }

        @@media (min-width: 1600px) {
            .screen {
                width: 500px;
                padding: 60px 50px;
                border-radius: 50px;
            }

            .logo {
                width: 200px;
                height: 200px;
                margin-bottom: 40px;
            }

            .input-field {
                padding: 22px 25px;
                font-size: 20px;
                border-radius: 35px;
            }

            .login-btn {
                padding: 26px 100px;
                font-size: 26px;
                border-radius: 35px;
            }

            .error-message {
                font-size: 18px;
            }

            h2 {
                font-size: 36px;
            }
        }
    </style>

    <div class="screen">
        <img src="/images/logo.jpeg" class="logo" alt="LSX Logo" />

        <form id="loginForm">
            <div class="input-group">
                <input type="text" name="username" class="input-field" placeholder="Arid No" required />
            </div>

            <div class="input-group">
                <input type="password" name="password" class="input-field" placeholder="Password" required />
            </div>

            <button type="submit" class="login-btn">LOG IN</button>

            <div class="error-message" id="errorMsg"></div>
        </form>
    </div>

    <script>
        const baseURL = "https://mhaseeb-t-fyp.hf.space"; // Spring Boot API URL

        document.getElementById("loginForm").addEventListener("submit", async function(e) {
            e.preventDefault();

            const usernameEl = document.querySelector("input[name='username']");
            const passwordEl = document.querySelector("input[name='password']");

            if (!usernameEl || !passwordEl) {
                console.error("Login form inputs not found!");
                return;
            }

            const username = usernameEl.value.trim();
            const password = passwordEl.value;

            const errorEl = document.getElementById("errorMsg");
            errorEl.classList.remove("show");
            errorEl.innerText = "";

            try {
                const response = await fetch(`${baseURL}/account/login`, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ username, password })
                });

                if (response.ok) {
                    const result = await response.json(); // Parse JSON first
                    console.log("Login successful:", result);

                    // Save user info
                    sessionStorage.setItem("userName", result.name);
                    sessionStorage.setItem("role", result.role);

                    // Redirect
                    window.location.href = "/home";
                } else {
                    const errorResult = await response.json(); // Parse error message
                    errorEl.innerText = errorResult.message || "Invalid username or password";
                    errorEl.classList.add("show");
                }

            } catch (err) {
                console.error("Login error:", err);
                errorEl.innerText = "Server error!";
                errorEl.classList.add("show");
            }
        });
    </script>

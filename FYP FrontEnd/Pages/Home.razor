@page "/Home"
@inject NavigationManager Navigation

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: #f5f5f5;
        overflow-x: hidden;
    }

    /* HEADER */
    .header {
        height: 72px; /* important */
        position: sticky;
        top: 0;
        z-index: 100;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 20px;
        background: #fff;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .logo {
        width: 60px;
        height: 60px;
        border-radius: 50%;
    }

    .icon-btn {
        background: none;
        border: none;
        font-size: 26px;
        cursor: pointer;
    }

    /* SPORTS FILTER */
    .sports-filter {
        display: flex;
        gap: 12px;
        padding: 15px;
        overflow-x: auto;
    }

    .sport-btn {
        padding: 10px 25px;
        border-radius: 25px;
        border: 2px solid #000;
        background: #000;
        color: #fff;
        font-size: 15px;
        cursor: pointer;
        white-space: nowrap;
    }

        .sport-btn.active {
            background: #E31212;
            border-color: #E31212;
        }

    /* CONTENT */
    .content {
        padding: 20px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .section-title {
        font-size: 26px;
        font-weight: bold;
    }

    /* MATCH CARD */
    .match-card {
        background: #E31212;
        color: #fff;
        border-radius: 18px;
        padding: 20px;
        margin-bottom: 15px;
    }

    .live-badge {
        display: flex;
        justify-content: space-between;
        font-weight: bold;
    }

    .live-text {
        background: #fff;
        color: #E31212;
        padding: 4px 10px;
        border-radius: 6px;
    }

    .team-name {
        font-size: 20px;
        margin-top: 8px;
    }

    .score {
        font-size: 24px;
        font-weight: bold;
    }

    /* SIDEBAR */
    .sidebar {
        position: fixed;
        top: 0;
        right: -100%;
        width: 85%;
        max-width: 350px;
        height: calc(100vh - 72px);
        overflow-y: auto;
        -webkit-overflow-scrolling: touch;
        background: #fff;
        transition: right 0.3s ease-in-out;
        z-index: 1000;
    }


        .sidebar.active {
            right: 0;
        }

    .sidebar-overlay {
        position: fixed;
        top: 72px;
        height: calc(100vh - 72px);
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(0,0,0,0.5);
        display: none;
        z-index: 999;
    }

        .sidebar-overlay.active {
            display: block;
        }

    .profile-section {
        padding: 35px 20px;
        text-align: center;
        border-bottom: 1px solid #eee;
    }

    .profile-icon {
        width: 80px;
        height: 80px;
        background: #000;
        border-radius: 50%;
        margin: auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .profile-icon i {
            color: #fff;
            font-size: 36px;
        }

    .profile-name {
        margin-top: 12px;
        font-size: 20px;
        font-weight: 500;
    }

    .menu-item {
        display: flex;
        align-items: center;
        gap: 18px;
        padding: 18px 25px;
        text-decoration: none;
        color: #000;
        font-size: 20px;
        border-bottom: 1px solid #f0f0f0;
    }

        .menu-item i {
            font-size: 26px;
        }

        .menu-item.logout {
            color: #E31212;
        }
</style>


<!-- OVERLAY -->
<div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

<!-- SIDEBAR -->
<div class="sidebar" id="sidebar">
    <div class="profile-section">
        <div class="profile-icon">
            <i class="fa-solid fa-user"></i>
        </div>
        <div class="profile-name" id="userName">Loading...</div>
    </div>

    <a href="/Sports" class="menu-item"><i class="fa-solid fa-basketball"></i> Sports</a>
    <a href="/Seasons" class="menu-item"><i class="fa-solid fa-trophy"></i> Seasons</a>
    <a href="/Stats" class="menu-item"><i class="fa-solid fa-chart-line"></i> Stats</a>
    <a href="/Matches" class="menu-item"><i class="fa-solid fa-handshake"></i> Matches</a>
    <a href="/Account" class="menu-item"><i class="fa-solid fa-user-gear"></i> Manage Account</a>
    <a href="/Scorer" class="menu-item"><i class="fa-solid fa-clipboard"></i> My Scorer</a>
    <a href="/Requests" class="menu-item"><i class="fa-solid fa-comments"></i> Requests</a>
    <a href="javascript:void(0)" class="menu-item logout" onclick="logout()">
        <i class="fa-solid fa-right-from-bracket"></i> Logout
    </a>
</div>

<!-- HEADER -->
<div class="header">
    <img src="/images/logo.jpeg" class="logo" />
    <button class="icon-btn" onclick="toggleSidebar()">☰</button>
</div>

<!-- SPORTS FILTER -->
<div class="sports-filter">
    <button class="sport-btn active">All Sports</button>
    <button class="sport-btn">Cricket</button>
    <button class="sport-btn">Futsal</button>
    <button class="sport-btn">Volleyball</button>
    <button class="sport-btn">Badminton</button>
    <button class="sport-btn">Table Tennis</button>
    <button class="sport-btn">Tug of War</button>
    <button class="sport-btn">Chess</button>
    <button class="sport-btn">Ludo</button>
</div>

<!-- CONTENT -->
<div class="content">
    @if (LiveMatches.Any())
    {
        <div class="section-header">
            <h2 class="section-title">Live Matches</h2>
        </div>

        @foreach (var match in LiveMatches)
        {
            <div class="match-card">
                <div class="live-badge">
                    <span>@match.Name</span>
                    <span class="live-text">LIVE</span>
                </div>
                <div class="team-name">@match.TeamA <span class="score">@match.ScoreA</span></div>
                <div class="team-name">@match.TeamB <span class="score">@match.ScoreB</span></div>
            </div>
        }
    }
</div>

<script>
    const userName = sessionStorage.getItem("userName");
    if(!userName){
        window.location.href = "/login";
    }
    else{
        document.getElementById("userName").innerText = userName;
    }

    function toggleSidebar() {
        document.getElementById("sidebar").classList.toggle("active");
        document.getElementById("sidebarOverlay").classList.toggle("active");
    }

    function logout(){
        if (confirm("Are you sure you want to logout?")) {
            sessionStorage.clear();
            window.location.href = "/login";
        }
    }
</script>

